<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountdownProject.Pages.GamePage"
             Title="Countdown">

    <VerticalStackLayout Padding="20" Spacing="18">

        <Label x:Name="TimerLabel"
               Text="00:30"
               FontSize="32"
               HorizontalOptions="Center" />

        <Label x:Name="LettersLabel"
               Text="Pick 9 letters"
               FontSize="26"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="12">
            <Button x:Name="VowelButton"
                    Text="Vowel"
                    Clicked="OnVowelClicked" />
            <Button x:Name="ConsonantButton"
                    Text="Consonant"
                    Clicked="OnConsonantClicked" />
            <Button x:Name="ClearButton"
                    Text="Clear"
                    Clicked="OnClearClicked" />
        </HorizontalStackLayout>

        <Button x:Name="StartButton"
                Text="Start Round"
                IsEnabled="False"
                Clicked="OnStartClicked"
                HorizontalOptions="Center" />

        <Entry x:Name="AnswerEntry"
               Placeholder="Enter your wordâ€¦"
               FontSize="18" />

        <Button Text="Submit"
                Clicked="OnSubmitClicked"
                HorizontalOptions="Center" />

        <Label x:Name="ResultLabel"
               Text=""
               FontSize="16"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
